<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/layout_shadow"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/findme_img_cover"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/findme_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/bkg_color_black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/findme_tv_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/findme_tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="80dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/findme_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/bkg_color_green"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:textColor="@color/txt_color_white"
            android:textSize="12sp"/>
    </RelativeLayout>

</LinearLayout>